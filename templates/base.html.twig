<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{asset('img/2.png')}}">

        {% block stylesheets %}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Lato&family=Montserrat:wght@400;600;700&family=Playfair+Display:wght@400;600&display=swap" rel="stylesheet">
            <script src="https://kit.fontawesome.com/adba52364d.js" crossorigin="anonymous"></script>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
            {{ encore_entry_link_tags('app')}}
        {% endblock %}

    </head>
    <body>

        <header>
            <figure>
                <a href="{{path('app_home')}}">
    
                    <img src="{{asset('img/2.png')}}" alt="logo">
                </a>
            </figure>
    
            <div class="mySidepanel" id="mySidepanel">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <nav>
                    <ul>
                        <li><a class="menuItem" href="{{path('app_home')}}">Home</a></li>
                        <li><a class="menuItem" href="{{path('app_newRelease')}}">New Release</a></li>
                        <li><a class="menuItem" href="{{path('app_myPlaylist')}}">My Playlists</a></li>
                        <li><a class="menuItem" href="{{path('app_like')}}">Liked Songs</a></li>
                        <li>
                            <a href="{{path('search')}}">
                                <i class="fa-solid fa-magnifying-glass menuItem"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
    
                <figure class="avatar">
                    
                    {% if (app.user) and (app.user.avatar != null) %}

                        <img src="{{ asset('uploads/' ~ app.user.avatar )}}" alt="avatar">

                    {% else %}

                        <img src="{{asset('img/avatar-gf5083c0bd_640.png')}}" alt="avatar">

                    {% endif %}
    
                    <div class="dropdown-content">
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <div class="admin">
                                    
                                <a href="{{path('admin')}}">
                                    <i class="fa-solid fa-toolbox"></i>
                                    admin
                                </a>
                            </div>
                        {% endif %}
    
                        {# if the user is an artist then show profile link #}
                        {% if app.user and is_granted('ROLE_ARTIST') %}
                            
                            <div class="profile">
                                
                                <a href="{{path('app_profile')}}">
                                    <i class="fa-solid fa-user"></i>
                                    Profile
                                </a>
                            </div>
                        
                        {# else show setting link to edit the user info #}
                        {% else %}

                            <div class="setting">
        
                                <a href="{{path('edit_profile')}}">
                                    <i class="fa-solid fa-gear"></i>
                                    Settings
                                </a>
                            </div>

                        {% endif %}
    
                        <div class="logout">

                            {% if app.user %}
                                <a href="{{path('app_logout')}}">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    LogOut
                                </a>             
                            
                            {% else %}
                                <a href="{{path('app_login')}}">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    LogIn
                                </a>  
                            {% endif %}
                        
                        </div>
    
                        
                        <button type="button" onclick="toggleTheme()" id="theme">mode</button>
    
                    </div>
                </figure>
                
            </div>
    
            <button class="openbtn" onclick="openNav()">&#9776;</button>
        </header>

        <main>
            {% block body %}{% endblock %}

        </main>


        <footer>
        
            <div class="legal">
                <ul>
                    <li><a href="#">Legal</a></li>
                    <li><a href="#">Privacy</a></li>
                    <li><a href="#">Cookie</a></li>
                    <li><a href="#">Copyright</a></li>
                </ul>
            </div>
    
            <small>StreamVibe</small>
            
        </footer>

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

            {{ encore_entry_script_tags('app')}}

        {% endblock %}
    </body>
</html>
