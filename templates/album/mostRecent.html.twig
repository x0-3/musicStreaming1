{% extends 'base.html.twig' %}

{% block title %}New releases{% endblock %}

{% block body %}

    <section class="more">

        <div class="listItems">

            {% for album in albums %}

                <div class="mcard">

                    <a href="{{path('app_albumDetail', {'id': album.uuid})}}">

                        <figure>
                            <img src="{{asset('uploads/' ~ album.cover)}}" alt="playlist image">
                        </figure>

                        <h3>{{album.nameAlbum}}</h3>

                    </a>
                </div>

            {% endfor %}
            
        </div>


        <div class="d-flex justify-content-center">
            
            {{ knp_pagination_render(albums) }}
        </div>
    </section>
{% endblock %}
