{% extends 'base.html.twig' %}

{% block title %}add {{song.nameSong}}{% endblock %}

{% block body %}

<form action="{{path('add_toSongsPlaylist', {'id': song.id})}}" method="post" class="d-flex flex-column w-50 m-auto">

    {% for playlist in playlists %}
    
        <label for="playlist">{{playlist.playlistName}}</label>
        <input type="checkbox" name="_playlist" value="{{playlist.id}}">
    {% endfor %}

    <input type="submit" value="add" />
        
</form>

{% endblock %}
