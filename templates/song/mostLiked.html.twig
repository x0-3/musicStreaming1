{% extends 'base.html.twig' %}

{% block title %}Most Liked{% endblock %}

{% block body %}

    <section class="m-5">

        <div class="d-flex m-auto flex-wrap">

            {% for song in songs %}

                <div class="card m-3 ">

                    <a href="{{path('app_songPlayer', {'id': song.id})}}">

                        <figure>
                            <img src="{{song.cover}}" alt="playlist image">
                        </figure>

                        <h3>{{song.nameSong}}</h3>

                    </a>
                </div>

            {% endfor %}
            
        </div>
    </section>
{% endblock %}
