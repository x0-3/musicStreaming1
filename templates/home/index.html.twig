{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<section class="home">

    <div class="playlist">

        <div class="title">

            <h1>Recommended</h1>
            <a href="#">More</a>
        </div>

        <div class="playlistCards">

            {% for playlist in playlists %}
                
                <div class="playlistCard">
                    <a href="{{path('playlist_detail', {'id' : playlist.id})}}">
                        
                        <figure>
                            <img src="{{playlist.image}}" alt="playlist image">
                        </figure>
                        
                        <h3>{{playlist.playlistName}}</h3>
                    </a>
                </div>
            {% endfor %}

        </div>

    </div>

    {% if app.user %}

        <div class="playlist">

            <div class="title">

                <h1>Your Favorite Playlists</h1>
                <a href="">More</a>
            </div>

            <div class="playlistCards">
                
  
                {% for favorite in app.user.favoritePlaylists %}
                    
                    <div class="playlistCard">

                        <a href="">
                            <figure>
                                <img src="{{favorite.image}}" alt="playlist image">
                            </figure>

                            <h3>{{favorite.playlistName}}</h3>

                        </a>
                    </div>
                {% endfor %}

            </div>

        </div>

    {% endif %}

    <div class="playlist">

        <div class="title">

            <h1>Most liked album</h1>
            <a href="#">More</a>
        </div>

        <div class="playlistCards">

            {% for song in songs %}

                <div class="playlistCard">
                    
                    {# TODO: link it to media player of one song #}
                    <a href="#">
                        
                        <figure>
                            <img src="{{song.cover}}" alt="playlist image">
                        </figure>
                        
                        <h3>{{song.nameSong}} </h3>
                    </a>
                    
                </div>
            {% endfor %}

        </div>

    </div>

</section>
{% endblock %}