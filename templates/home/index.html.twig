{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<section class="home">

    <div class="playlist">

        <div class="title">

            <h1>Recommended</h1>
            <a href="#">More</a>
        </div>

        <div class="playlistCards">

            {% for playlist in playlists %}
                
                <div class="playlistCard">
                    <a href="{{path('playlist_detail')}}">
                        
                        <figure>
                            <img src="{{playlist.image}}" alt="playlist image">
                        </figure>
                        
                        <h3>{{playlist.playlistName}}</h3>
                    </a>
                </div>
            {% endfor %}

        </div>

    </div>

    {% if app.user %}

        <div class="playlist">

            <div class="title">

                <h1>Your Favorite Playlists</h1>
                <a href="{{path('playlist_detail')}}">More</a>
            </div>

            <div class="playlistCards">
                
  
                {% for favorite in app.user.favoritePlaylists %}
                    
                    <div class="playlistCard">

                        <a href="{{path('playlist_detail')}}">
                            <figure>
                                <img src="{{favorite.image}}" alt="playlist image">
                            </figure>

                            <h3>{{favorite.playlistName}}</h3>

                        </a>
                    </div>
                {% endfor %}

            </div>

        </div>

    {% endif %}

    {# TODO: figure out what to do with it #}
    <div class="playlist">

        <div class="title">

            <h1>Discover a new genre</h1>
            <a href="#">More</a>
        </div>

        <div class="playlistCards">

            <div class="playlistCard">

                <a href="{{path('playlist_detail')}}">

                    <figure>
                        <img src="img/1.png" alt="playlist image">
                    </figure>
                    
                    <h3>Playlist Name</h3>
                </a>

            </div>

        </div>

    </div>

</section>
{% endblock %}